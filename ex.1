class complex:
    def __init__(self,r,i):
        self.r=r
        self.i=i
    def __sub__(self,a):
        s=complex(0,0)
        if (type(a)==type(self)):
            s.r=self.r-a.r
            s.i=self.i-a.i
        else:
            s.r=self.r-a
            s.i=self.i
        return(s)
    def __str__(self):
        return '{}+i{}'.format(self.r,self.i)
